#include <Arduino.h>

#define C_verde 9
#define C_amarelo 10
#define C_vermelho 11
#define P_verde 12
#define P_vermelho 13
#define botao 3

void setup(){
    int pinMode(9, OUTPUT);
    int pinMode(10, OUTPUT);
    int pinMode(11, OUTPUT);
    int pinMode(12, OUTPUT);
    int pinMode(13, OUTPUT);
    int pinMode(3, INPUT);

    digitalWrite(9, HIGH);
    digitalWrite(10, LOW);
    digitalWrite(11, LOW);
    digitalWrite(12, LOW);
    digitalWrite(13, HIGH);
    digitalWrite(3, LOW);

}

void loop(){
    int digitalWrite(9, HIGH);
    int digitalWrite(13, HIGH);
    delay(1000);
    int digitalWrite(9, LOW);
    int digitalWrite(10, HIGH);
    delay(1000);
    int digitalWrite(10, LOW);
    int digitalWrite(11, HIGH);
    int digitalWrite(13, LOW);
    int digitalWrite(12, HIGH);
    delay(1000);
    int digitalWrite(11, LOW);
    int digitalWrite(12, LOW);
    int digitalWrite(13, HIGH);  

}