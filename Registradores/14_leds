#include <Arduino.h>

void setup(){
    DDRB |= (1<< DDB5);
    DDRB |= (1<< DDB4);
    DDRB |= (1<< DDB3);
    DDRB |= (1<< DDB2);
    DDRB |= (1<< DDB1);
    DDRB |= (1<< DDB0);
    DDRD |= (1<< DDD7);
    DDRD |= (1<< DDD6);
    DDRD |= (1<< DDD5);
    DDRD |= (1<< DDD4);
    DDRD |= (1<< DDD3);
    DDRD |= (1<< DDD2);
    DDRD |= (1<< DDD1);
    DDRD |= (1<< DDD0);
   
    PORTB &= ~(1<<PORTB5);
    PORTB &= ~(1<<PORTB4);
    PORTB &= ~(1<<PORTB3);
    PORTB &= ~(1<<PORTB2);
    PORTB &= ~(1<<PORTB1);
    PORTB &= ~(1<<PORTB0);
    PORTD &= ~(1<<PORTD7);
    PORTD &= ~(1<<PORTD6);
    PORTD &= ~(1<<PORTD5);
    PORTD &= ~(1<<PORTD4);
    PORTD &= ~(1<<PORTD3);
    PORTD &= ~(1<<PORTD2);
    PORTD &= ~(1<<PORTD1);
    PORTD |= (1<<PORTD0);
}

void loop(){
    PORTD |= (1<<PORTD0);
    delay(1000);
    PORTD &= ~(1<<PORTD0);
    PORTD |= (1<<PORTD1);
    delay(1000);
    PORTD &= ~(1<<PORTD1);
    PORTD |= (1<<PORTD2);
    delay(1000);
    PORTD &= ~(1<<PORTD2);
    PORTD |= (1<<PORTD3);
    delay(1000);
    PORTD &= ~(1<<PORTD3);
    PORTD |= (1<<PORTD4);
    delay(1000);
    PORTD &= ~(1<<PORTD4);
    PORTD |= (1<<PORTD5);
    delay(1000);
    PORTD &= ~(1<<PORTD5);
    PORTD |= (1<<PORTD6);
    delay(1000);
    PORTD &= ~(1<<PORTD6);
    PORTD |= (1<<PORTD7);
    delay(1000);
    PORTD &= ~(1<<PORTD7);
    PORTB |= (1<<PORTB0;
    delay(1000);
    PORTB &= ~(1<<PORTB0);
    PORTB |= (1<<PORTB1);
    delay(1000);
    PORTB &= ~(1<<PORB1);
    PORTB |= (1<<PORTB2);
    delay(1000);
    PORTB &= ~(1<<PORTB2);
    PORTB |= (1<<PORTB3);
    delay(1000);
    PORTB &= ~(1<<PORTB3);
    PORTB |= (1<<PORTB4);
    delay(1000);
    PORTB &= ~(1<<PORTB4);
    PORTB |= (1<<PORTB5);
    delay(1000);
    PORTB &= ~(1<<PORTB5);
    delay(1000);
}